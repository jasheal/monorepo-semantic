{
  "name": "mrs",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {},
  "version": "1.0.0",
  "description": "Testing semantic release and lerna",
  "main": "index.js",
  "author": "Jason Healy",
  "license": "MIT",
  "private": true,
  "devDependencies": {
    "lerna": "^3.18.4",
    "@commitlint/cli": "^8.2.0",
    "@commitlint/config-conventional": "^8.2.0",
    "@semantic-release/git": "^7.0.18",
    "@smartive/semantic-release-lerna": "^1.0.0",
    "semantic-release": "^16.0.0-beta.31"
  },
  "dependencies": {},
  "release": {
    "prepare": false,
    "ci": false,
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@smartive/semantic-release-lerna",
      "@semantic-release/npm",
      [
        "@semantic-release/git",
        {
          "message": "chore(release): New version ${nextRelease.version} \n\n${nextRelease.notes} [skip ci]"
        }
      ]
    ],
    "branches": [
      "master",
      {
        "name": "alpha",
        "prerelease": true
      }
    ]
  }
}
